<div class="container">
    <h1 class="title is-3"><%= current_user.name %>'s Profile</h1>
</div>

<div class="container">
    <h1 class="title is-5">My Business Card</h1>
    <div class="container">
        <% current_user.cards.first.attributes.each do |k, v|  %>
            <% if v != '' && k != 'created_at' && k != 'updated_at' && k != 'id' && k != 'user_id' %>
                <%= k %>: <%= v %>
            <% end %>
        <% end %>
        <%= link_to "Edit My Info", edit_user_card_path(current_user.id, current_user.cards[0].id), class: 'button is-light' %>
    </div>
</div>

<div class="container">
    <h1 class="title is-5">My Contacts</h1>
    <% if current_user.cards.length == 1 %>
        <h2 class="subtitle is-6">You have no friends (Right now)</h2>
    <% else %>  
        <% current_user.cards.each do |card| %>
            <% next if card == current_user.cards[0] %>
            <% card.attributes.each do |k,v| %>
                <% if v != '' && k != 'created_at' && k != 'updated_at' && k != 'id' && k != 'user_id' %>
                    <%= k %>: <%= v %>
                <% end %>
            <% end %>
            <%= link_to "View this card", user_card_path(current_user.id, card.id) %>
            <% end %>
    <% end %>
</div>

