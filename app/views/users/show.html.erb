<div class="container">
    <h1 class="title is-3"><%= current_user.name %>'s Profile</h1>
</div>

<div class="block">
  <div class="columns">
    <div class="card-content">
    <h1 class="title is-5">My Business Card</h1>
      <div class="card-image">
        <figure class="image is-4by3">
          <img src="<%= current_user.cards[0].image %>" alt="Placeholder image">
        </figure>
      </div>

      <div class="media">
        <div class="media-left">
        <% if current_user.cards.first.logo %>
            <figure class="image is-48x48">
                <img src="<%= current_user.cards.first.logo %>" alt="Placeholder image">
            </figure>
        <% end %>
        </div>
        <div class="media-content">
            <p class="title is-4"><%= current_user.cards.first.name %></p>
            <p class="subtitle is-6"><%= current_user.cards.first.email %></p>
        </div>
      </div>

      <div class="content">
      <% current_user.cards.first.attributes.each do |k, v| %>
        <% if v != '' && k != 'created_at' && k != 'updated_at' && k != 'id' && k != 'user_id' && k != 'image' && k != 'logo' %>
          <p class="content is-small"><%= k.capitalize %>: <%= v %></p>
        <% end %>
      <% end %>
      </div>
      <%= link_to "Edit My Card", edit_user_card_path(current_user.id, current_user.cards.first.id), class: 'button is-light' %>
    </div>

    <div class="column is-4"></div>

    <div class="column is-4">
      <%= form_tag(cards_search_path(current_user)) do %>
        <%= label_tag "Enter a name to search:" %>
        <%= search_field_tag "search" %>
        <%= submit_tag 'Search'%>
      <% end %>
    </div>
  </div>
</div>

<div class="block">
  <div class="columns">
    <div class="column is-third"></div>

    <div class="column is-third field has-addons">
      <div class="control has-icons-left">
        <span class="icon is-small is-left">
          <i class="fas fa-search"></i>
        </span>
        <input type="text" class="input" placeholder="Search my contacts">
      </div>
      <div class="control">
        <a href="#" class="button is-info">Search</a>
      </div>
    </div>

    <div class="column is-third"></div>
  </div>  
</div>

<div class="container">
    <h1 class="title is-5">My Contacts</h1>
    <% if current_user.cards.length == 1 %>
        <h2 class="subtitle is-6">You have no friends (Right now)</h2>
    <% else %>  
        <% current_user.cards.each do |card| %>
            <% next if card == current_user.cards[0] %>
            <% card.attributes.each do |k,v| %>
                <% if v != '' && k != 'created_at' && k != 'updated_at' && k != 'id' && k != 'user_id' %>
                    <%= k %>: <%= v %>
                <% end %>
            <% end %>
            <%= link_to "View this card", user_card_path(current_user.id, card.id) %>
        <% end %>
    <% end %>
</div>

<div class="block">
  <div class="columns">
    <div class="column is-third">
      <p class="box">Card Here</p>
    </div>
    <div class="column">
      <p class="box">Card Here</p>
    </div>
    <div class="column">
      <p class="box">Card Here</p>
    </div>  
  </div>
</div>

