<h1>Users#edit</h1>
<p>Put the Edit User form in here</p>
<%= form_for @user do |user| %>
    <div>
        <%= user.label :name %>
        <%= user.text_field :name %>
    </div>
    <div>
        <%= user.label :email %>
        <%= user.text_field :email %>
    </div>
    <div>
        <%= user.label :password %>
        <%= user.password_field :password %>
    </div>
    <div>
        <%= user.label :retype_password %>
        <%= user.password_field :password_confirmation %>
    </div>
    <div>
        <%= user.submit "Update My Profile" %>
    </div>
<% end %>

<%= link_to "Delete My Account", user_path, method: :delete, data: { confirm: "Are you sure you want to delete your account?" } %>